<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanTypeActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/typeCamera"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonBackToMain"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:onClick="BackActivityMain"
        android:text="@string/textBackButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/buttonScanType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ручной ввод"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonToScanColors"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/buttonBackToMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />

    <Button
        android:id="@+id/buttonToScanColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="startActivityScanColors"
        android:text="@string/textToScanColorsButton"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <SeekBar
        android:id="@+id/secondbar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:max="255"
        android:progress="128"
        app:layout_constraintEnd_toEndOf="@+id/typeCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/firstbar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:max="255"
        android:progress="40"
        app:layout_constraintEnd_toEndOf="@+id/typeCamera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/typeCamera"
        app:layout_constraintTop_toTopOf="@+id/typeCamera" />

    <SeekBar
        android:id="@+id/seekBar9"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:max="500"
        android:progress="250"
        app:layout_constraintEnd_toEndOf="@+id/typeCamera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/typeCamera"
        app:layout_constraintTop_toTopOf="@+id/typeCamera" />

    <SeekBar
        android:id="@+id/seekBar10"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:max="1000"
        android:progress="500"
        app:layout_constraintEnd_toEndOf="@+id/typeCamera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/typeCamera"
        app:layout_constraintTop_toTopOf="@+id/typeCamera" />

    <Button
        android:id="@+id/matButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="321dp"
        android:text="Mat"
        app:layout_constraintEnd_toEndOf="@+id/typeCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/typeCamera" />

    <TextView
        android:id="@+id/tipText"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:gravity="bottom|center"
        android:outlineProvider="none"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Выберите сторону, запомните её и отсканируйте"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonScanType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/scanProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="79dp"
        android:max="6"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/typeCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scanBarText"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|center"
        android:outlineProvider="none"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Отсканируйте сторону"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonScanType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/HelpScan2x2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:onClick="CreateAndShowDialog"
        android:src="@drawable/help_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>