<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanColorActivity">


    <org.opencv.android.JavaCameraView
        android:id="@+id/tutorial1_activity_java_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        opencv:camera_id="any"
        opencv:show_fps="false" />

    <SeekBar
        android:id="@+id/secondbar"
        android:layout_width="405dp"
        android:layout_height="100dp"
        android:layout_marginBottom="48dp"
        android:max="255"
        android:progress="128"
        app:layout_constraintBottom_toTopOf="@+id/buttonScanType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <SeekBar
        android:id="@+id/firstbar"
        android:layout_width="405dp"
        android:layout_height="100dp"
        android:layout_marginBottom="96dp"
        android:max="255"
        android:progress="40"
        app:layout_constraintBottom_toTopOf="@+id/buttonScanType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <Button
        android:id="@+id/buttonBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="BackActivityScanType"
        android:text="@string/textBackButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/buttonScanType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="@string/textScanButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonToScanColors"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />

    <Button
        android:id="@+id/buttonToScanColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:onClick="StartActivitySolution"
        android:text="@string/textToSolveButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.998" />

    <ImageView
        android:id="@+id/leftupcorner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="244dp"
        android:src="@drawable/one_color_corner"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial1_activity_java_surface_view"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/upedge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="244dp"
        android:rotation="90"
        android:src="@drawable/two_color_edge_lda"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial1_activity_java_surface_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/rightupcorner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="244dp"
        android:rotation="90"
        android:src="@drawable/one_color_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/leftedge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/one_color_edge_lda"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial1_activity_java_surface_view"
        app:layout_constraintStart_toStartOf="@+id/tutorial1_activity_java_surface_view" />

    <ImageView
        android:id="@+id/rightedge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="239dp"
        android:layout_marginBottom="160dp"
        android:rotation="180"
        android:src="@drawable/one_color_edge_lda"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial1_activity_java_surface_view"
        app:layout_constraintStart_toStartOf="@+id/tutorial1_activity_java_surface_view" />

    <ImageView
        android:id="@+id/rightdowncorner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="75dp"
        android:rotation="180"
        android:src="@drawable/one_color_corner"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial1_activity_java_surface_view"
        app:layout_constraintEnd_toEndOf="@+id/tutorial1_activity_java_surface_view" />

    <ImageView
        android:id="@+id/downedge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="75dp"
        android:rotation="270"
        android:src="@drawable/two_color_edge_lda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/leftdowncorner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="75dp"
        android:rotation="270"
        android:src="@drawable/one_color_corner"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial1_activity_java_surface_view"
        app:layout_constraintStart_toStartOf="@+id/tutorial1_activity_java_surface_view" />

</androidx.constraintlayout.widget.ConstraintLayout>